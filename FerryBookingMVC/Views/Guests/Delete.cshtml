@model FerryBookingClassLibrary.Models.Guest

@{
    ViewData["Title"] = "Delete Guest";
}

<h2>Delete Guest</h2>

<h4>Guest</h4>
<hr />

<div>
    <h4>Are you sure you want to delete this?</h4>
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Gender
        </dt>
        <dd class="col-sm-10">
            @Model.Gender
        </dd>
        <dt class="col-sm-2">
            Car Id
        </dt>
        <dd class="col-sm-10">
            @Model.CarId
        </dd>
        <dt class="col-sm-2">
            Ferry Id
        </dt>
        <dd class="col-sm-10">
            @Model.FerryId
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-secondary" href="/Guests">Back to List</a>
    </form>
</div>