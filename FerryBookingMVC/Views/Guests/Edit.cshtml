@model FerryBookingClassLibrary.Models.Guest

@{
    ViewData["Title"] = "Edit Guest";
}

<h2>Edit Guest</h2>

<div class="alert alert-warning" role="alert">
    Are you sure you want to edit this guest?
</div>

<div class="card">
    <div class="card-header">
        <h4>Edit Guest ID: @Model.Id</h4>
    </div>
    <form asp-action="Edit" method="post">
        <div class="card-body">
            <div class="form-group row">
                <label asp-for="Name" class="col-sm-3 control-label">
                    <h5>Name:</h5>
                </label>
                <div class="col-sm-9">
                    <input asp-for="Name" class="form-control"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Gender" class="col-sm-3 control-label">
                    <h5>Gender:</h5>
                </label>
                <div class="col-sm-9">
                    <select asp-for="Gender" class="form-control">
                        <option value="false">Male</option>
                        <option value="true">Female</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="FerryId" class="col-sm-3 control-label">
                    <h5>Ferry:</h5>
                </label>
                <div class="col-sm-9">
                    <select asp-for="FerryId" class="form-control" asp-items="ViewBag.Ferries"></select>
                    <span asp-validation-for="FerryId" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="card-footer text-right">
            <button type="submit" class="btn btn-primary">Save</button>
            <a class="btn btn-secondary" href="/Guests">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}