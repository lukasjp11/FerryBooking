@model FerryBookingClassLibrary.Models.Guest

@{
ViewData["Title"] = "Edit Guest";
}

<h2>Edit Guest</h2>

<h4>Guest</h4>
<hr />

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Gender" class="control-label"></label>
        <select asp-for="Gender" class="form-control">
            <option value="false">Male</option>
            <option value="true">Female</option>
        </select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FerryId" class="control-label">Ferry</label>
        <select asp-for="FerryId" class="form-control" asp-items="ViewBag.Ferries"></select>
        <span asp-validation-for="FerryId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<div>
    <a class="btn btn-secondary" href="/Guests">Back to List</a>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
