@model IEnumerable<FerryBookingClassLibrary.Models.Guest>

@{
    ViewData["Title"] = "Guests";
}

<h1>Guests</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New Guest</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>Name</th>
        <th>Gender</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.Gender)</td>
            <td>
                <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>