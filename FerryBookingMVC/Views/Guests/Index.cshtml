@model IEnumerable<FerryBookingClassLibrary.Models.Guest>

@{
    ViewData["Title"] = "Guests";
}

<h1>Guests</h1>

<table class="table">
    <thead>
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Gender</th>
        <th>Car ID</th>
        <th>Ferry ID</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var guest in Model)
    {
        <tr>
            <td>@guest.Id</td>
            <td>@guest.Name</td>
            <td>@guest.Gender</td>
            <td>@guest.CarId</td>
            <td>@guest.FerryId</td>
            <td>
                <a asp-action="Details" asp-route-id="@guest.Id">View</a>
                <a asp-action="Edit" asp-route-id="@guest.Id">Edit</a>
                <a asp-action="Delete" asp-route-id="@guest.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<a asp-action="Create">Create New Guest</a>