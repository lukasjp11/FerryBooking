@model IEnumerable<FerryBookingClassLibrary.Models.Guest>

@{
    ViewData["Title"] = "Guest List";
}

<h2>Guest List</h2>

<p>
    <a asp-action="Create">Create New Guest</a>
</p>

<table class="table">
    <thead>
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Gender</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var guest in Model)
    {
        <tr>
            <td>@guest.Id</td>
            <td>@guest.Name</td>
            <td>@guest.Gender</td>
            <td>
                <a asp-action="Edit" asp-route-id="@guest.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@guest.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@guest.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>