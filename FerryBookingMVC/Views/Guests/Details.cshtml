@model FerryBookingClassLibrary.Models.Guest

@{
ViewData["Title"] = "Guest Details";
}

<h2>Guest Details</h2>

<div>
    <h4>Guest</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Gender
        </dt>
        <dd class="col-sm-10">
            @Model.Gender
        </dd>
        <dt class="col-sm-2">
            Car ID
        </dt>
        <dd class="col-sm-10">
            @Model.CarId
        </dd>
        <dt class="col-sm-2">
            Ferry ID
        </dt>
        <dd class="col-sm-10">
            @Model.FerryId
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" href="/Guests/Edit/@Model.Id">Edit</a> |
    <a class="btn btn-secondary" href="/Guests">Back to List</a>
</div>
