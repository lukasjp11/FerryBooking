@model FerryBookingClassLibrary.Models.Guest

@{
ViewData["Title"] = "Guest Details";
}

<h2>Guest Details</h2>

<div class="card">
    <div class="card-header">
        <h4>@Model.Name</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">
                Name
            </dt>
            <dd class="col-sm-9">
                @Model.Name
            </dd>
            <dt class="col-sm-3">
                Gender
            </dt>
            <dd class="col-sm-9">
                @(Model.Gender ? "Female" : "Male")
            </dd>
            <dt class="col-sm-3">
                Ferry ID
            </dt>
            <dd class="col-sm-9">
                @Model.FerryId
            </dd>
        </dl>
    </div>
    <div class="card-footer">
        <a class="btn btn-primary" href="/Guests/Edit/@Model.Id">Edit</a>
        <a class="btn btn-secondary" href="/Guests">Back to List</a>
    </div>
</div>
