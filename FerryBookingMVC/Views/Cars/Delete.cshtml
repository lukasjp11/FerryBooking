@model FerryBookingMVC.Models.CarViewModel

@{
ViewData["Title"] = "Delete Car";
}

<h2>Delete Car</h2>

<div class="alert alert-danger" role="alert">
    Are you sure you want to delete this car?
</div>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Car ID: @Model.Id</h4>
        <div class="form-group">
            <label class="font-weight-bold">Ferry:</label>
            <p class="form-control-plaintext">@Model.FerryName</p>
        </div>
        <div class="form-group">
            <label class="font-weight-bold">Guests:</label>
            <ul class="list-group">
                @foreach (var guest in ViewBag.Guests)
                {
                    <li class="list-group-item">@guest.Name (@guest.Id)</li>
                }
            </ul>
        </div>
    </div>
    <div class="card-footer">
        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="mt-3">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a class="btn btn-secondary" href="/Cars">Cancel</a>
            </div>
        </form>
    </div>
</div>
