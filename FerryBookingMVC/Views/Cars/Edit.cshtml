@model FerryBookingClassLibrary.Models.Car

@{
    ViewData["Title"] = "Edit Car";
}

<h2>Edit Car</h2>

<h4>Car</h4>
<hr />

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="FerryId" class="control-label">Ferry Id</label>
        <input asp-for="FerryId" class="form-control" />
        <span asp-validation-for="FerryId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Guests" class="control-label">Guests</label>
        <input asp-for="Guests" class="form-control" />
        <span asp-validation-for="Guests" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<div>
    <a class="btn btn-secondary" href="/Cars">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}