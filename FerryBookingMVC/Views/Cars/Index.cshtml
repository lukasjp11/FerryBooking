@model IEnumerable<FerryBookingClassLibrary.Models.Car>

@{
    ViewData["Title"] = "Car List";
}

<h2>Car List</h2>

<p>
    <a asp-action="Create">Create New Car</a>
</p>

<table class="table">
    <thead>
    <tr>
        <th>ID</th>
        <th>Driver</th>
        <th>Number of Guests</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var car in Model)
    {
        <tr>
            <td>@car.Id</td>
            <td>@car.Driver.Name</td>
            <td>@car.Guests.Count</td>
            <td>
                <a asp-action="Edit" asp-route-id="@car.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@car.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@car.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>