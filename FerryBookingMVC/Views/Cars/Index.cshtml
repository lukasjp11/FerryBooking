@model IEnumerable<FerryBookingClassLibrary.Models.Car>

@{
    ViewData["Title"] = "Car Index";
}

<h2>Cars</h2>

<p>
    <a class="btn btn-primary" href="/Cars/Create">Create New Car</a>
</p>

<table class="table">
    <thead>
    <tr>
        <th>ID</th>
        <th>Guests</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Guests.Count</td>
            <td>
                <a class="btn btn-info" href="/Cars/Details/@item.Id">Details</a> |
                <a class="btn btn-warning" href="/Cars/Edit/@item.Id">Edit</a> |
                <a class="btn btn-danger" href="/Cars/Delete/@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>