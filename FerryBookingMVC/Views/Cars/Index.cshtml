@model IEnumerable<FerryBookingClassLibrary.Models.Car>

@{
    ViewData["Title"] = "Cars";
}

<h1>Cars</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New Car</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>Driver</th>
        <th>Guests</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @foreach (var guest in item.Guests)
                {
                    <p>@guest.Name</p>
                }
            </td>
            <td>
                <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>