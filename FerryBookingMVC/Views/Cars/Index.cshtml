@model IEnumerable<FerryBookingClassLibrary.Models.Car>

@{
    ViewData["Title"] = "Cars";
}

<h1>Cars</h1>

<table class="table">
    <thead>
    <tr>
        <th>ID</th>
        <th>Number of Guests</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var car in Model)
    {
        <tr>
            <td>@car.Id</td>
            <td>@car.Guests.Count</td>
            <td>
                <a asp-action="Details" asp-route-id="@car.Id">View</a>
                <a asp-action="Edit" asp-route-id="@car.Id">Edit</a>
                <a asp-action="Delete" asp-route-id="@car.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<a asp-action="Create">Create New Car</a>