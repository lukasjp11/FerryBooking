@model FerryBookingClassLibrary.ViewModels.CarViewModel

@{
ViewData["Title"] = "Car Details";
}

<h2>Car Details</h2>

<div class="card">
    <div class="card-header">
        <h4>Car ID: @Model.Id</h4>
    </div>
    <div class="card-body">
        <div class="form-group row">
            <label class="col-sm-3 control-label"><h5>Guests:</h5></label>
            <div class="col-sm-9">
                <div class="card p-3" style="max-height: 300px; overflow-y: auto;">
                    @foreach (var guestName in Model.GuestNames)
                    {
                    <div class="form-check">
                        <label class="form-check-label">@guestName</label>
                    </div>
                    }
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-3 control-label"><h5>Ferry:</h5></label>
            <div class="col-sm-9">
                <p class="form-control-static">@Model.FerryName</p>
            </div>
        </div>
    </div>
    <div class="card-footer text-right">
        <a class="btn btn-primary" href="/Cars/Edit/@Model.Id">Edit</a>
        <a class="btn btn-secondary" href="/Cars">Cancel</a>
    </div>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
