@model FerryBookingMVC.Models.CarViewModel

@{
ViewData["Title"] = "Car Details";
}

<h2>Car Details</h2>

<hr />

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Car ID: @Model.Id</h4>
        <div class="form-group">
            <label class="font-weight-bold">Ferry:</label>
            <p class="form-control-plaintext">@Model.FerryName</p>
        </div>
        <div class="form-group">
            <label class="font-weight-bold">Guests:</label>
            <ul class="list-group">
                @foreach (var guest in ViewBag.Guests)
                {
                <li class="list-group-item">@guest.Name (@guest.Id)</li>
                }
            </ul>
        </div>
        <div class="mt-3">
            <a class="btn btn-primary" href="/Cars/Edit/@Model.Id">Edit</a>
            <a class="btn btn-danger" href="/Cars/Delete/@Model.Id">Delete</a>
        </div>
    </div>
</div>

<div class="mt-3">
    <a class="btn btn-secondary" href="/Cars">Back to List</a>
</div>
