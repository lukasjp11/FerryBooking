@model FerryBookingClassLibrary.Models.Ferry

@{
ViewData["Title"] = "Delete Ferry";
}

<h2>Delete Ferry</h2>

<h4>Ferry</h4>
<hr />

<div>
    <h4>Are you sure you want to delete this?</h4>
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Max Cars
        </dt>
        <dd class="col-sm-10">
            @Model.MaxCars
        </dd>
        <dt class="col-sm-2">
            Max Guests
        </dt>
        <dd class="col-sm-10">
            @Model.MaxGuests
        </dd>
        <dt class="col-sm-2">
            Price Per Car
        </dt>
        <dd class="col-sm-10">
            @Model.PricePerCar
        </dd>
        <dt class="col-sm-2">
            Price Per Guest
        </dt>
        <dd class="col-sm-10">
            @Model.PricePerGuest
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-secondary" href="/Ferries">Back to List</a>
    </form>
</div>
