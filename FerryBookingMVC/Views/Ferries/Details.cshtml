@model FerryBookingClassLibrary.Models.Ferry

@{
ViewData["Title"] = "Ferry Details";
}

<h2>Ferry Details</h2>

<div>
    <h4>Ferry</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Max Cars
        </dt>
        <dd class="col-sm-10">
            @Model.MaxCars
        </dd>
        <dt class="col-sm-2">
            Max Guests
        </dt>
        <dd class="col-sm-10">
            @Model.MaxGuests
        </dd>
        <dt class="col-sm-2">
            Price Per Car
        </dt>
        <dd class="col-sm-10">
            @Model.PricePerCar
        </dd>
        <dt class="col-sm-2">
            Price Per Guest
        </dt>
        <dd class="col-sm-10">
            @Model.PricePerGuest
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" href="/Ferries/Edit/@Model.Id">Edit</a> |
    <a class="btn btn-secondary" href="/Ferries">Back to List</a>
</div>
