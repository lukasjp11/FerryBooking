<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FerryBookingMAUI.Pages.Guests.EditGuestPage">
    <StackLayout Padding="10">
        <Label Text="Edit Guest" FontSize="Large" HorizontalOptions="Center" />

        <Label Text="Name" FontSize="Medium" />
        <Entry Placeholder="Name" Text="{Binding Guest.Name}" />

        <Label Text="Gender" FontSize="Medium" />
        <Picker Title="Gender" SelectedItem="{Binding Guest.Gender}"  HeightRequest="70">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Male</x:String>
                    <x:String>Female</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>

        <Label Text="Select Ferry" FontSize="Medium" />
        <Picker Title="Select Ferry" ItemsSource="{Binding Ferries}" ItemDisplayBinding="{Binding Name}" SelectedItem="{Binding SelectedFerry}" HeightRequest="70"/>

        <Button Text="Save" Command="{Binding SaveCommand}" />
    </StackLayout>
</ContentPage>