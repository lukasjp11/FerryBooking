<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FerryBookingMAUI.Pages.GuestDetailsPage">
    <StackLayout Padding="10">
        <Label Text="Guest Details" FontSize="Large" HorizontalOptions="Center" />

        <Label Text="Name" FontSize="Medium" />
        <Label Text="{Binding Guest.Name}" FontSize="Medium" />

        <Label Text="Gender" FontSize="Medium" />
        <Label Text="{Binding Guest.Gender, Converter={StaticResource BoolToGenderConverter}}" FontSize="Medium" />

        <Label Text="Ferry ID" FontSize="Medium" />
        <Label Text="{Binding Guest.FerryId}" FontSize="Medium" />

        <Button Text="Edit" Command="{Binding EditCommand}" />
        <Button Text="Delete" Command="{Binding DeleteCommand}" />
    </StackLayout>
</ContentPage>