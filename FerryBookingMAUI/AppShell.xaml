<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:pages="using:FerryBookingMAUI.Pages"
       x:Class="FerryBookingMAUI.AppShell">
    <TabBar>
        <Tab Title="Cars">
            <ShellContent ContentTemplate="{DataTemplate pages:CarPage}" />
        </Tab>
        <Tab Title="Ferries">
            <ShellContent ContentTemplate="{DataTemplate pages:FerryPage}" />
        </Tab>
        <Tab Title="Guests">
            <ShellContent ContentTemplate="{DataTemplate pages:GuestPage}" />
        </Tab>
    </TabBar>
</Shell>