<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:FerryBookingMAUI.Pages"
       xmlns:cars="using:FerryBookingMAUI.Pages.Cars"
       xmlns:ferries="using:FerryBookingMAUI.Pages.Ferries"
       xmlns:guests="using:FerryBookingMAUI.Pages.Guests"
       x:Class="FerryBookingMAUI.AppShell">

    <TabBar>
        <Tab Title="Ferries">
            <ShellContent ContentTemplate="{DataTemplate ferries:FerryPage}" />
        </Tab>
        <Tab Title="Cars">
            <ShellContent ContentTemplate="{DataTemplate cars:CarPage}" />
        </Tab>
        <Tab Title="Guests">
            <ShellContent ContentTemplate="{DataTemplate guests:GuestPage}" />
        </Tab>
    </TabBar>
</Shell>