<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:FerryBookingMAUI.Pages"
       x:Class="FerryBookingMAUI.AppShell">

    <TabBar>
        <Tab Title="Ferries">
            <ShellContent ContentTemplate="{DataTemplate local:FerryPage}" />
        </Tab>
        <Tab Title="Cars">
            <ShellContent ContentTemplate="{DataTemplate local:CarPage}" />
        </Tab>
        <Tab Title="Guests">
            <ShellContent ContentTemplate="{DataTemplate local:GuestPage}" />
        </Tab>
    </TabBar>
</Shell>